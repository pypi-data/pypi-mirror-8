<?xml version="1.0"?>
<!-- This file holds the setup configuration of the viewlet managers
     for the "Pegasus" skin.
     -->

<object>

  <order manager="plone.portalfooter" skinname="Pegasus">
    <viewlet name="jalon.footer"/>
    <viewlet name="plone.colophon"/>
    <viewlet name="plone.site_actions"/>
   </order>

  <order manager="plone.portalheader" skinname="Pegasus">
    <viewlet name="plone.logo"/>
    <viewlet name="plone.app.i18n.locales.languageselector"/>
    <viewlet name="jalon.global_sections"/>
  </order>

  <order manager="plone.belowcontentbody" skinname="Pegasus">
    <viewlet name="jalon.comments"/>
  </order>

  <hidden manager="plone.belowcontent" skinname="Pegasus">
    <viewlet name="plone.belowcontenttitle.keywords"/>
    <viewlet name="plone.comments"/>
  </hidden>

  <hidden manager="plone.portalfooter" skinname="Pegasus">
    <viewlet name="plone.analytics"/>
    <viewlet name="plone.site_actions"/>
    <viewlet name="plone.colophon"/>
    <viewlet name="plone.footer"/>
  </hidden>

  <hidden manager="plone.portalheader" skinname="Pegasus">
    <viewlet name="plone.searchbox"/>
    <viewlet name="plone.global_sections"/>
    <viewlet name="plone.personal_bar"/>
  </hidden>

  <hidden manager="plone.abovecontent" skinname="Pegasus">
    <viewlet name="plone.path_bar"/>
  </hidden>

</object>
