<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema elementFormDefault="qualified" xmlns:xsd="http://www.w3.org/2001/XMLSchema">



	<xsd:element name="midas">
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element name="metadata" type="metadataType" minOccurs="1" maxOccurs="1"/>
				<xsd:element name="experiments" type="experimentsType" minOccurs="1" maxOccurs="1"/>
				<xsd:element name="measurements" type="measurementsType" minOccurs="1" maxOccurs="1"/>
			</xsd:sequence>
		</xsd:complexType>
	</xsd:element>
	

	<xsd:complexType name="measurementsType">
		<xsd:sequence>
			<xsd:element name="specy" type="specyType" maxOccurs="unbounded" />
		</xsd:sequence>	
		<xsd:attribute name="length" type="xsd:string" use="required"/>
	</xsd:complexType>	
	
	
	<xsd:complexType name="specyType">
		<xsd:sequence>
			<xsd:element name="time" type="timeType" maxOccurs="unbounded"/>
		</xsd:sequence>
		<xsd:attribute name="name" type="xsd:string" use="required"/>
		</xsd:complexType>
	
	<xsd:complexType name="timeType">
		<xsd:simpleContent>
			<xsd:extension base="xsd:string">
				<xsd:attribute name="value" type="xsd:decimal" use="required"/>
				<xsd:attribute name="units" type="unitsType"/>
			</xsd:extension>
		</xsd:simpleContent>
	</xsd:complexType>
	
	
	<xsd:simpleType name="unitsType">
		<xsd:restriction base="xsd:string">
			<xsd:enumeration value="seconds" />
			<xsd:enumeration value="minutes" />
			<xsd:enumeration value="hours" />
		</xsd:restriction>
	</xsd:simpleType>
	


	<xsd:complexType name="experimentsType">
		<xsd:sequence>
			<xsd:element ref="stimuli" maxOccurs="unbounded"/>
			<xsd:element ref="inhibitor" minOccurs="0" maxOccurs="unbounded"/>
		</xsd:sequence>
		<xsd:attribute name="length" type="xsd:decimal" use="required"/>
	</xsd:complexType>
	
	<xsd:element name="inhibitor">
		<xsd:complexType>
			<xsd:simpleContent>
				<xsd:extension base="xsd:string">
					<xsd:attribute name="name" type="xsd:string" use="required"/>
				</xsd:extension>
			</xsd:simpleContent>
		</xsd:complexType>
	</xsd:element>

	<xsd:element name="stimuli">
		<xsd:complexType>
			<xsd:simpleContent>
				<xsd:extension base="xsd:string">
					<xsd:attribute name="name" type="xsd:string" use="required"/>
				</xsd:extension>
			</xsd:simpleContent>
		</xsd:complexType>
	</xsd:element>
	
	<xsd:complexType name="metadataType">

		<xsd:sequence>
			<xsd:element name="name" type="xsd:string"/>
			<xsd:element name="comments" type="xsd:string"/>
			<xsd:element name="authors" type="authorsType_metadata" maxOccurs="1"/>
			<xsd:element name="references" type="referencesType"/>
		</xsd:sequence>
	</xsd:complexType>

	<xsd:complexType name="authorsType_metadata">
		<xsd:sequence>
			<xsd:element name="author" type="authorType_metadata" maxOccurs="unbounded"/>
		</xsd:sequence>
	</xsd:complexType>
	
	<xsd:complexType name="authorType_metadata">
		<xsd:sequence>
			<xsd:element name="name" type="xsd:string" maxOccurs="1"/>
			<xsd:element name="email" type="xsd:string" maxOccurs="unbounded"/>
		</xsd:sequence>
	</xsd:complexType>
	
	
	<xsd:complexType name="referencesType">
		<xsd:sequence>
			<xsd:element name="reference" type="referenceType"  maxOccurs="unbounded"/>
		</xsd:sequence>
	</xsd:complexType>

	
	<xsd:complexType name="referenceType">
		<xsd:sequence>
			<xsd:element  name="authors" type="xsd:string"/>
			<xsd:element name="title" type="xsd:string"/>
			<xsd:element name="journal" type="xsd:string"/>
			<xsd:element name="links" maxOccurs="unbounded"/>
		</xsd:sequence>
	</xsd:complexType>

	
	<xsd:element name="links">
		<xsd:complexType>
			<xsd:sequence>
				<xsd:element ref="link"/>
			</xsd:sequence>
		</xsd:complexType>
	</xsd:element>
	
	<xsd:element name="link" type="xsd:string"/>




	

</xsd:schema>
