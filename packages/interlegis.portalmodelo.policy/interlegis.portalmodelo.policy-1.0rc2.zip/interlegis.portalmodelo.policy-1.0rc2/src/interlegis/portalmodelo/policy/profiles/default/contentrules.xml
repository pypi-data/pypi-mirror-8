<?xml version="1.0"?>
<contentrules>
 <rule name="novo_comentario" title="Enviar mensagem ao receber comentários"
    cascading="False"
    description="Cada comentário gerará um e-mail para o grupo de revisores de conteúdo."
    enabled="True" event="zope.lifecycleevent.interfaces.IObjectAddedEvent"
    stop-after="False">
  <conditions>
   <condition type="plone.conditions.PortalType">
    <property name="check_types">
     <element>Discussion Item</element>
     <element>PloneboardComment</element>
    </property>
   </condition>
  </conditions>
  <actions>
   <action type="plone.actions.MailGroup">
    <property name="source"/>
    <property name="message">Um novo comentário foi adicionado no site:
     
     ${title}
     ${url}</property>
    <property name="groups">
     <element>Reviewers</element>
    </property>
    <property name="members"/>
    <property name="subject">Novo comentário</property>
   </action>
  </actions>
 </rule>
 <assignment name="novo_comentario" bubbles="True" enabled="True" location=""/>
</contentrules>
