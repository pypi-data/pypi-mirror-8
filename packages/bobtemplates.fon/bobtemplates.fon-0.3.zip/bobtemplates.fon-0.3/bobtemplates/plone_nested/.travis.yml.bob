language: python
python: {{{ python.version }}}
env:
  - TARGET=test
  - TARGET=coverage.sh
install:
  - sudo apt-get -qq install libfreetype6-dev liblcms1-dev libwebp-dev
  - mkdir -p buildout-cache/{eggs,downloads}
  - python bootstrap.py -c buildout.d/travis.cfg
  - bin/buildout -c buildout.d/travis.cfg -N -q -t 5
before_script:
  - export DISPLAY=:99.0
  - sh -e /etc/init.d/xvfb start
script: bin/$TARGET
after_success:
  - pip install coveralls
  - coveralls
notifications:
  irc:
      - "{{{ author.irc }}}"
  {{{ travis.notifications.type }}}:
      - {{{ travis.notifications.destination }}}
