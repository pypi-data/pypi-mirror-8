<html
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    tal:omit-tag="python: True"
    tal:condition="view/available"
    i18n:domain="ftw.topics">

    <div class="topicReferences">
        <span class="topicReferencesTitle" i18n:translate="label_topice_references_title">
            References:
        </span>
        <tal:refs tal:repeat="ref view/get_references">
            <a tal:attributes="href ref/url; title ref/description;"
               tal:content="ref/title"><!-- Title --></a>
        </tal:refs>
    </div>



</html>