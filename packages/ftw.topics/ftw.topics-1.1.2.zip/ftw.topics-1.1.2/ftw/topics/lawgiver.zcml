<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:lawgiver="http://namespaces.zope.org/lawgiver"
    i18n_domain="ftw.topics">

    <include package="ftw.lawgiver" file="meta.zcml" />

    <lawgiver:map_permissions
        action_group="edit"
        permissions="ftw.topics: Set Topic Reference"
        />

    <lawgiver:map_permissions
        action_group="add"
        permissions="ftw.topics: Add Topic,
                     ftw.topics: Add Topic Tree"
        />

</configure>
