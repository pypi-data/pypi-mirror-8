<bind:collection bind="options" id="options">
    <vc>
        <lt bind="__items" />
        <button bind="__add" icon="plus" text="{Create}" />
    </vc>

    <bind:template>
        <ltr>
            <ltd>
                <textbox bind="value" />
            </ltd>
            <ltd>
                <button bind="__delete" icon="remove" style="icon" warning="{Confirm deletion}" />
            </ltd>
        </ltr>
    </bind:template>
</bind:collection>