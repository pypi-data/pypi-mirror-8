<hc>
    <box width="20">
        <icon id="icon" icon="bolt" />
    </box>
    <box width="190" id="ac">
        <label style="bold" text="{AC power}" />
    </box>
    <box width="190" id="battery">
        <hc>
            <label style="bold" text="{Battery}" />
            <box width="30" />
            <progressbar id="charge" value="0.5" width="100" />
        </hc>
    </box>

    <tooltip text="{Suspend}">
        <button style="mini" id="suspend" icon="pause" warning="{Suspend the system?}" />
    </tooltip>

    <tooltip text="{Hibernate}">
        <button style="mini" id="hibernate" icon="asterisk" warning="{Hibernate the system?}" />
    </tooltip>

    <tooltip text="{Reboot}">
        <button style="mini" id="reboot" icon="undo" warning="{Reboot the system?}" />
    </tooltip>
    
    <tooltip text="{Power off}">
        <button style="mini" id="shutdown" icon="off" warning="{Shutdown the system?}" />
    </tooltip>
</hc>