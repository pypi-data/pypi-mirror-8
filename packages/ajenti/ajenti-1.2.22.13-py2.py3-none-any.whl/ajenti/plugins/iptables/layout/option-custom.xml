<vc>
    <formline text="{Name}">
        <textbox bind="name" />
    </formline>
    <formline text="{Arguments}">
        <vc>
            <bind:collection bind="arguments">
                <vc bind="__items" />
                <bind:template>
                    <hc>
                        <textbox bind="value" />
                        <button style="icon" icon="remove" bind="__delete" />
                    </hc>
                </bind:template>
            </bind:collection>
            <button icon="plus" text="{Argument}" bind="__add" />
        </vc>
    </formline>
</vc>