<vc>
    <body>
        <pad id="pane-not-configured" visible="False">
            <vc>
                <label style="bold" text="Ajenti.org integration is not yet configured." />

                <hc>
                    <label text="Please enter machine key:" />
                    <textbox id="machine-key" />
                    <button icon="ok" text="Authorize" id="save-key" />
                </hc>

            </vc>
        </pad>

        <pad id="pane-configured" visible="False">
            <vc>
                <hc>
                    <label style="bold" text="Last successful report:" />
                    <label id="last-report" />
                    <button icon="remove" text="Disconnect" id="disconnect" />
                </hc>

                <label id="last-error" />
            </vc>
        </pad>
    </body>
</vc>