<vc xmlns:packages="packages">
    <body>
        <pad id="bind-root">
            <bind:collection id="plugins" bind="plugins">
                <dt bind="__items" style="compressed">
                    <dtr header="True"> 
                        <dth width="16" />
                        <dth width="16" />
                        <dth text="{Name}" />
                        <dth text="ID" width="1" />
                    </dtr>
                </dt>

                <bind:template>
                    <dtr>
                        <dtd binder:context="crash">
                            <tooltip bind:text="crash" id="crash" bindtransform="lambda x: x.describe() if x else None">
                                <icon id="warning-icon" bind:icon="crash" bindtransform="lambda x: 'warning-sign' if x else None" style="yellow" />
                            </tooltip>
                        </dtd>
                        <dtd>
                            <icon bind:icon="icon" />
                        </dtd>
                        <dtd>
                            <collapse>
                                <hc>
                                    <label bind:text="title" style="bold"/>
                                </hc>
                                <pad>
                                    <vc>
                                        <label text="{Description}" style="bold" />
                                        <label bind="description" />

                                        <label text="{Dependencies}" style="bold" />
                                        <bind:collection bind="dependencies" id="dependencies">
                                            <indent>
                                                <dt bind="__items" style="compressed" filtering="False">
                                                    <dtr>
                                                        <dth text="{Type}" />
                                                        <dth text="{Depends on}" />
                                                        <dth text="{Status}" />
                                                    </dtr>
                                                </dt>
                                            </indent>

                                            <bind:template>
                                                <dtr>
                                                    <dtd>
                                                        <label bind:text="description" style="bold"/>
                                                    </dtd>
                                                    <dtd>
                                                        <label bind:text="value" />
                                                    </dtd>
                                                    <dtd>
                                                        <hc>
                                                            <icon id="warning-icon" bind:icon="satisfied" 
                                                                bindtransform="
                                                                    lambda x: 'warning-sign' if not x() else 'ok'
                                                                " style="yellow" />
                                                            <packages:installer id="fix" />
                                                        </hc>
                                                    </dtd>
                                                </dtr>
                                            </bind:template>
                                        </bind:collection>
                                    </vc>
                                </pad>
                            </collapse>
                        </dtd>
                        <dtd>
                            <label bind:text="name" />
                        </dtd>
                    </dtr>
                </bind:template>
            </bind:collection>
        </pad>
    </body>
</vc>