{% extends 'article-category.jinja' %}

{% block breadcrumb %}
<li>
  {{ article.title }}
</li>
{% endblock breadcrumb %}

{% block main %}
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>{{ article.title }}</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
    <p>{{ article.content|safe }}</p>
    </div>
  </div>
</div>
{% endblock main %}
