{% extends 'home.jinja' %}

{% block title %}{{ category and category.title }} {{ super() }}{% endblock title %}
{% block meta_description %}{{ (category and category.description or '')|striptags|truncate(300) }}{% endblock %}

{% block breadcrumb %}
{{ super() }}
<li>
  {% if category %}
  <a href="{{ url_for('nereid.cms.article.category.render', uri=category.unique_name) }}" itemprop="url">
    <span itemprop="title">{{ category.title }}</span>
  </a>
  {% elif article %}
  <a href="{{ url_for('nereid.cms.article.category.render', uri=article.category.unique_name) }}" itemprop="url">
    <span itemprop="title">{{ article.category.title }}</span>
  </a>
  {% endif %}
</li>
{% endblock breadcrumb %}

{% block main %}
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>{{ category.title }}</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <ul>
        {% for article in category.articles %}
        <li>
          <a href="{{ url_for('nereid.cms.article.render', uri=article.uri) }}">
            {{ article.title }}
          </a>
        </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</div>
{% endblock main %}
