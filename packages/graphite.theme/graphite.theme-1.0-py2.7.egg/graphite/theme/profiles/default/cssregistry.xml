<?xml version="1.0"?>
<object name="portal_css">

    <stylesheet id="++theme++graphite.theme/css/graphite.theme.ionicons.css"
        expression="request/HTTP_X_THEME_ENABLED | nothing"
        applyPrefix="True" />

    <stylesheet id="++theme++graphite.theme/css/graphite.theme.main.css"
        expression="python:request.cookies.get('bika.graphite.disabled', '0')=='0' and request['HTTP_X_THEME_ENABLED']"
        applyPrefix="True" />

    <stylesheet id="++theme++graphite.theme/css/graphite.theme.iefixes.css"
        expression="python:request.cookies.get('bika.graphite.disabled', '0')=='0' and request['HTTP_X_THEME_ENABLED']"
        conditionalcomment="IE"
        applyPrefix="True" />

    <!-- CSS for ON/OFF styling when theme is inactive -->
    <stylesheet id="++theme++graphite.theme/css/graphite.theme.inactive.css"
        expression="python:request.cookies.get('bika.graphite.disabled', '0')=='1' and request['HTTP_X_THEME_ENABLED']"
        applyPrefix="True" />


    <!-- Disable old css -->
    <stylesheet id="++theme++graphite.theme/css/main.css"
        enabled="False" />

    <stylesheet id="++theme++graphite.theme/css/iefixes.css"
        enabled="False" />

    <stylesheet id="++theme++graphite.theme/css/ionicons.css"
        enabled="False" />

</object>
