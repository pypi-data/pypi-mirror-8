<?xml version="1.0" encoding="utf-8"?>
<resources-list id="rss_2">
  <resource type="engineer" id="ing_1">
    <role idref="ing_py"/>
    <label>Emmanuel Breton</label>
    <use-calendar idref="typic_cal"/>
  </resource>
  <resource type="engineer" id="ing_2">
    <role idref="ing_py"/>
    <label>Arthur Lutz</label>
    <use-calendar idref="typic_cal"/>
  </resource>
  <resource type="engineer" id="ing_3">
    <role idref="ing_py"/>
    <label>Sandrine Ribeau</label>
    <use-calendar idref="typic_cal"/>
  </resource>
  <resource-role id="ing_py" hourly-cost="80.00" cost-unit="EUR">
      <label>Ingénieur développement Python</label>
  </resource-role>

  <calendar id="typic_cal">
    <label>Calendrier Francais</label>
    <!-- define types -->
    <day-types default='working'>
      <day-type id="working">
        <label>Standard work day</label>
        <interval start="0800" end="1200"/>
        <interval start="1300" end="1724"/>
      </day-type>
      <day-type id="non_working">
        <label>Week-end day</label>
      </day-type>
      <day-type id="holiday">
        <label>Day Off</label>
      </day-type>
    </day-types>
    <!-- constructs calendar -->
    <!-- week -->
    <day type="non_working">sat</day>
    <day type="non_working">sun</day>
    <!-- feast days -->
    <day type="non_working">01-01</day>
    <day type="non_working">05-01</day>
    <day type="non_working">05-08</day>
    <day type="non_working">07-14</day>
    <day type="non_working">08-15</day>
    <day type="non_working">11-01</day>
    <day type="non_working">11-11</day>
    <day type="non_working">12-25</day>
    <!-- holidays -->
    <timeperiod to="2002-12-31" from="2002-12-26" type="holiday"/>
    <timeperiod to="2003-03-14" from="2003-03-10" type="holiday"/>
    <timeperiod to="2003-08-18" from="2003-08-14" type="holiday"/>
    <timeperiod to="2004-05-21" from="2004-05-20" type="holiday"/>
  </calendar>
</resources-list>
