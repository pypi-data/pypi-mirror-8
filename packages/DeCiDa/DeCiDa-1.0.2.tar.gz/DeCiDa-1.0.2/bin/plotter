import user, decida
from decida.Plotterx import Plotterx
Plotterx(
    plot_type="cartesian",
    sample_type="linear",
    npts=1000,
    min=0.0,
    max=5.0,
    xcol="time",
    ycol="v",
    acol="theta",
    rcol="r",
    tcol="t",
    equations="""v=sin(time*3)"""
)
