% Use a new framed command for bridges
\renewcommand{\FrameCommand}[1]{
  \begin{tikzpicture}
    \node[rectangle] (rect) {
      \begin{minipage}{.8\textwidth}
        #1
      \end{minipage}
    };
    \draw[very thick, dashed] (rect.north west) -- (rect.south west);
  \end{tikzpicture}
}
