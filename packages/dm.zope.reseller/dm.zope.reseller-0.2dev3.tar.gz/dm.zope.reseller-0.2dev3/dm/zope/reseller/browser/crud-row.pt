<tal:block>
  <!-- state cell -->
  <td class="formstate">
      <image src="/++resource++dm_zope_reseller/error.png" tal:condition="python:view.status == -1" />
      <image src="/++resource++dm_zope_reseller/ok.png" tal:condition="python:view.status == 1" />
  </td>
  <!-- widget cells -->
  <tal:block repeat="widget view/widgets/values">
  <td tal:define="
      error widget/error;
      fieldname string: field-${widget/field/__name__};
      "
      tal:attributes="class python:'field' + (error and ' error' or '') + fieldname + ' ' + widget.klass">
      <span class="error" tal:omit-tag="not:error">
        <div tal:condition="error" tal:replace="structure error/render" />
        <input type="text" tal:replace="structure widget/render" />
      </span>
  </td>
  </tal:block>
  <!-- action cell -->
  <td class="action actioncell">
    <input type="submit"  tal:repeat="action view/actions/values|nothing" tal:replace="structure action/render" />
  </td>
</tal:block>
