<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:define-macro="page"
      tal:define="
      title  title | view/title | context/title | template/id;
      headless view/headless | nothing;
      "
      tal:omit-tag="headless"
      i18n:domain="dm_zope_reseller">
  <head tal:condition="not: headless">
    <title tal:content="title" />
    <link rel="stylesheet" type="text/css" href="/++resource++dm_zope_reseller/reseller.css" />
    <metal:block define-slot="style_slot" />
    <script type="text/javascript" src="/++resource++dm_zope_reseller/jquery-1.11.0.min.js"></script>
    <script type="text/javascript" src="/++resource++dm_zope_reseller/reseller.js"></script>
    <metal:block define-slot="js_slot" />
  </head>
  <body tal:omit-tag="headless">
    <tal:div replace="structure provider:dm_zope_reseller__menu_bar" tal:condition="not:headless" />
    <tal:statusmsg tal:define="messages python:modules['Products.statusmessages.interfaces'].IStatusMessage(request).show()"
                   tal:repeat="message messages">
        <dl class="message info"
            tal:define="mtype message/type | nothing;"
            tal:attributes="class string:message ${mtype};">
            <dt tal:content="python:mtype.capitalize()"
                i18n:translate="">
                Info
            </dt>
            <dd tal:content="message/message | nothing"
                i18n:translate="">
                The status message.
            </dd>
        </dl>
    </tal:statusmsg>
    <h1 tal:content="title" />
    <div class="description" tal:content="structure view/description|nothing" />
    <metal:slot define-slot="body" />
  </body>
</html>
