#!/usr/bin/env bash

set -eu

set -o pipefail > /dev/null 2>&1 || true

output=$(set -eu; /usr/local/cpython-2.5/bin/pylint \
	'--init-hook'='import sys; sys.path.append("/home/dstromberg/lib"); sys.path.append(".")' \
	'--max-line-length'=145 \
	'--module-rgx'='[A-Za-z_][-a-zA-Z0-9_]+$' \
	'--class-rgx'='[A-Za-z_][-a-zA-Z0-9_]+$' \
	"$@" 2>&1 || true)
if echo "$output" | egrep -iq traceback
then
	echo "pylint exited with a traceback:" 1>&2
	echo "$output" 1>&2
	exit 1
fi

pruned_output=$(echo "$output" | egrep '^\*\*\*|^[CWERF]:' || true)

if echo "$pruned_output" | egrep -v '^\*\*\*|^W: *[0-9]*: FIXME:' | egrep -q .
then
	echo "$pruned_output" 1>&2
	exit 1
else
	exit 0
fi
	

