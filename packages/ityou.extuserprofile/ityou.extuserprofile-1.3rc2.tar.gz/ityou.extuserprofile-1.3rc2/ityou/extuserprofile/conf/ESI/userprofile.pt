<!-- CONTENT ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~  -->
<tal:userdata define="u view/user;
                      my_property view/my_property;
                      portal_url context/portal_url;
                      url_unquote_plus python:modules['Products.PythonScripts.standard'].url_unquote_plus;
                      author python:(len(request.traverse_subpath) > 0
		                            and url_unquote_plus(request.traverse_subpath[0]))
				                    or request.get('author', None);" 
         i18n:domain="ityou.extuserprofile">

    <!-- Userprofile form ESI ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <div id="userprofile-wrapper">
    	<div id="ESI_ROOT"      tal:content="view/ESI_ROOT"></div>
        <h1 class="documentFirstHeading breadcrumb">
            <span i18n:translate="personal-profile">Personal profile</span>
            <!--<span id="personal-edit" tal:condition="my_property"><a href="@@personal-information"></a></span>-->
        </h1>

        <div class="hidden" id="uid"><span tal:replace="author | string:" /></div>

        <div class="bs-row">

            <!-- Spalte links -->
            <div class="left-column col-xs-12 col-md-6 col">

                <div class="portrait_block">

		            <div id="portrait" tal:attributes="class string:pfield ${my_property} portrait">
	                    <img tal:attributes="src u/portrait; title u/fullname"  tal:condition="u/portrait | nothing" />
            		</div>

                    <div id="user-fullname"></div>

            		<div id="user-actions" tal:condition="python: not my_property">
	                    <div tal:condition="view/imessage_installed | nothing" id="send-message">
		                    <a tal:attributes="href string:@@messages?sid=${u/id}">
		                        <i class="fa fa-envelope"/> <span id="message_text" i18n:translate="send_message">Send message</span>
		                    </a>
            		    </div>
            		</div>

                </div>
                <div class="visualClear"></div>
            
                <h3 i18n:translate="personal_information">Personal information</h3>
                <tal:fields define="fields view/FS/FIELDSET_00" repeat="f fields">
                    <div metal:use-macro="view/context/ityou.extuserprofile.macros/fieldset" />
                </tal:fields>
                <div class="visualClear"></div>

                <h3 i18n:translate="contact_information">Contact information</h3>            
                <tal:fields define="fields view/FS/FIELDSET_01" repeat="f fields">
                    <div metal:use-macro="view/context/ityou.extuserprofile.macros/fieldset" />
                </tal:fields>
                <div class="visualClear"></div>

        	    <tal:fields define="fields view/FS/FIELDSET_02" repeat="f fields">
            		<div metal:use-macro="view/context/ityou.extuserprofile.macros/fieldset" />
        	    </tal:fields>
                <div class="visualClear"></div>
            </div>

            <!-- Spalte rechts -->        
            <div class="right-column col-xs-12 col-md-6 col">

	            <h3 i18n:translate="education_profession">Education and profession</h3>
                <tal:fields define="fields view/FS/FIELDSET_04" repeat="f fields">
                    <div metal:use-macro="view/context/ityou.extuserprofile.macros/fieldset" />
                </tal:fields>
                <div class="visualClear"></div>

	            <h3 class="clearfix" i18n:translate="biography" style="width:100%;height:1.5em">Biography</h3>
                <tal:fields define="fields view/FS/FIELDSET_05" repeat="f fields">
                    <div metal:use-macro="view/context/ityou.extuserprofile.macros/fieldset" />
                </tal:fields>
                <div class="visualClear"></div>
                	
            	<h3 class="clearfix" i18n:translate="interests" style="width:100%; height:1.5em">Interests and main focus</h3>
                <tal:fields define="fields view/FS/FIELDSET_06" repeat="f fields">
                    <div metal:use-macro="view/context/ityou.extuserprofile.macros/fieldset" />
                </tal:fields>
                <div class="visualClear"></div>
                	
	        </div>
        </div>
        <div class="visualClear"></div>
    </div>    
    <!-- /Userprofile form ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

    <!-- astream as macro ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <div id="user-activity-wrapper" tal:define="uid python:author" tal:condition="view/astream_installed | nothing">
        <div metal:use-macro="view/context/@@ityou.astream.macros/astream-macro">
            <metal:slot metal:fill-slot="title">
                <h1 class="documentFirstHeading" 
                    i18n:translate="user_activities">Users activities</h1>                
            </metal:slot>
        </div>
        <div metal:use-macro="view/context/@@ityou.astream.tmplmacros/astream-tmpl-macro">
            (DYNAMISCHES NACHLADEN)
        </div>
        <div class="visualClear"></div>        
    </div>
    <!-- /astream as macro ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

    <!-- ~~~~~~~~~~~~~~ BOOTSTRAP MODUL ~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    <div class="modal fade" id="eup-thumbnail-modal" tabindex="-1" role="dialog" aria-labelledby="eup-thumbnail-modal-label" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="eup-thumbnail-modal-label" i18n:translate="eup_thumbnail_modal_heading">Choose image</h4>
                </div>
                <div class="modal-body clearfix" i18n:domain="ityou.extuserprofile">
                    <h3 id="no-images-uploaded" i18n:translate="no-images-uploaded" style="text-align: center;">Please upload an image first</h3>
                </div>
                <div class="modal-footer">
                    <div id="upload-image-wrapper" class="pull-left">
                        <a tal:attributes="href string:${context/@@plone_portal_state/portal_url}/Members/${author}/createObject?type_name=Image" class="btn btn-default">
                            <div id="upload-image" i18n:translate="upload-image">Upload image</div>
                        </a>
                    </div>
                    
                    <button type="button" class="btn btn-default" i18n:translate="eup_thumbnail_btn_close" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-default" i18n:translate="eup_thumbnail_btn_save">Save changes</button>
                </div>
            </div>
        </div>
    </div>
    
    <div class="modal fade" id="eup-crop-modal" tabindex="-1" role="dialog" aria-labelledby="eup-crop-modal-label" aria-hidden="true" i18n:domain="ityou.extuserprofile">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="eup-crop-modal-label" i18n:translate="eup_crop_modal_heading">Crop image</h4>
                </div>
                <div class="modal-body clearfix">
                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" i18n:translate="eup_crop_modal_cancel">Cancel</button>
                    <button type="button" class="btn btn-default pull-right" id="save-crop" i18n:translate="save">Save</button>
                </div>
            </div>
        </div>
    </div>
    
    <!-- user lÃ¶schen -->
    <div class="modal fade" id="eup-delete-me" tabindex="-1" role="dialog" aria-labelledby="eup-delete-me-label" aria-hidden="true"
         tal:condition="view/my_property | nothing">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="eup-delete-me-label" i18n:translate="eup_delete_me_heading">Delete user account</h4>
                </div>
                <div class="modal-body clearfix">
                    <p i18n:translate="eup_delete_me_body">Are you sure to permanently delete your user account?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default pull-left" data-dismiss="modal" i18n:translate="eup_crop_modal_cancel">Cancel</button>
                    <a tal:attributes="href python:context.absolute_url()+'/@@delete-me'" class="btn btn-danger" i18n:translate="eup_delete_me_ok">Yes, delete my account!</a> 
                </div>
            </div>
        </div>
    </div>
    <!-- ~~~~~~~~~~~~~~ /BOOTSTRAP MODUL ~~~~~~~~~~~~~~~~~~~~~~~~~ -->


    <!-- ~~~~~~~~~~~ jsrender tmpl ~~~~~~~~~~~ -->
    <script id="thumbnails-tmpl" type="text/x-jsrender">
    <div class="thumb">
        <img src="{{:url}}/image_thumb" class="img-responsive" alt="Thumbnail">
    </div>
    </script>
    <!--  ~~~~~~~~~~~ /jsrender tmpl ~~~~~~~~~~~ -->

        
</tal:userdata>
<!-- /CONTENT ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->


