from gi.repository import Gtk, Gdk
from KochMorse import KochMorse
import logging
import gettext
import locale


# Init I18N
# XXX oh ugly
LOCALE_PATH = '/usr/share/KochMorse/i18n'
GETTEXT_DOMAIN = 'KochMorse'

locale.setlocale(locale.LC_ALL, '')
gettext.bindtextdomain(GETTEXT_DOMAIN, LOCALE_PATH)
gettext.textdomain(GETTEXT_DOMAIN)


# init threads...
Gdk.threads_init()


# init logging
handler = logging.StreamHandler()
handler.setLevel(logging.INFO)
handler.setFormatter(logging.Formatter("%(levelname)s: %(filename)s %(lineno)d (%(funcName)s): %(message)s"))
logger = logging.getLogger("kochmorse")
logger.addHandler(handler)


# init and run application
app = KochMorse()
Gtk.main()
