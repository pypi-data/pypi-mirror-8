<VirtualHost _default_:80>
    ServerAdmin webmaster@myapp.com

    ErrorLog ${APACHE_LOG_DIR}/error.log
    CustomLog ${APACHE_LOG_DIR}/access.log combined
    LogLevel warn

    DocumentRoot /srv/myapp.com/www/root

    ProxyRequests off
    <Proxy *>
        Order deny,allow
        Allow from all
    </Proxy>

    ProxyPreserveHost off

</VirtulaHost