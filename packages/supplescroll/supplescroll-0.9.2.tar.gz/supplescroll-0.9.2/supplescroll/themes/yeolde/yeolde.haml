%head
  %meta{content:'initial-scale=1.0', name:'viewport'}
  %link{rel:'stylesheet', href:'{{ page.include_dir }}/supplescroll.css'}
  %link{rel:'stylesheet', href:'{{ page.include_dir }}/yeolde.css'}
  %link{href:'http://fonts.googleapis.com/css?family=Cardo:700,400,400italic', rel:'stylesheet', type:'text/css'}
  - if page.title:
    %title {{ page.title }}

%body
  #table-of-contents.touchscroll
  #main-text.touchscroll
    .relative_position
      - if page.breadcrumb:
        .breadcrumb
          {{ page.breadcrumb }}
      {{ page.content }}
      .timestamp
        <a href="http://github.com/boscoh/supplescroll">supplescroll</a>:<i>Ye Olde!</i> theme
  #figure-list.touchscroll

%script{type:'text/javascript', src:'{{ page.include_dir }}/jquery-2.0.3.js'}
%script{type:'text/javascript', src:'{{ page.include_dir }}/jquery.scrollTo.js'}
%script{type:'text/javascript', src:'{{ page.include_dir }}/supplescroll.js'}
%script{type:'text/javascript', src:'{{ page.include_dir }}/page.js'}

- if page.postpend:
  {{ page.postpend }}

