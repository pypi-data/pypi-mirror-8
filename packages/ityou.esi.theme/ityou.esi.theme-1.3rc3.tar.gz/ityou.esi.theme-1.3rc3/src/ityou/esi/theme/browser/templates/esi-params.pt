<!-- PLONE Parameter, die über DIAZO raus gehen 
# Diese Parameter werden insbesondere für Javascript / JQuery-Anwendungen
# benötigt
# ITYOU/LM 2014
-->

<div class="hidden" id="ESI-PARAMS">
    <div id="ESI_DATA"  tal:define="udata                   view/get_user_data; 
                                    portal_url              view/get_portal_url;
                                    templ                   view/get_template_id;
                                    statusflags_delay        view/get_statusflags_delay;
                                    "
                        tal:attributes="data-ityou-view                 templ; 
                                        data-ityou-uid                  udata/uid;
                                        data-ityou-fullname             udata/fullname;
                                        data-ityou-portal-url           portal_url;
                                        data-ityou-profile-url          string:$portal_url/author/${udata/uid};
                                        data-ityou-server-time-offset	view/get_server_time_offset;
                                        data-ityou-homefolder-url       udata/homefolder;
                                        data-ityou-imessage-url         string:$portal_url/@@dialog-overview;
                                        data-ityou-events-url           string:$portal_url/events;
                                        data-ityou-members-url          string:$portal_url/Members;
                                        data-ityou-statusflags-delay    statusflags_delay;
                                        data-ityou-time-format          string:%d.%m.%Y - %H:%M;
                                        data-ityou-creator              context/Creator | nothing;
                                        data-ityou-comment-flag         view/get_comment_moderation_flag;    
                                        data-ityou-content-uid          view/get_content_uid | nothing;
                                        data-ityou-lang                 python:context.restrictedTraverse('@@plone_portal_state').language();
                                        " /><!-- #LM todo: data-statusflags-delay raus -->

</div>

