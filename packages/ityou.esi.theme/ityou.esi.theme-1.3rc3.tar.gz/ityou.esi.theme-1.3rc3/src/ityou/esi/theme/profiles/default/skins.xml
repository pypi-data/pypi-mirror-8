<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="ITYOU ESI Theme">
   
 <object name="ityou_esi_theme_images"
    meta_type="Filesystem Directory View"
    directory="ityou.esi.theme:skins/images"/>
 <object name="ityou_esi_theme_templates"
    meta_type="Filesystem Directory View"
    directory="ityou.esi.theme:skins/templates"/>
 <object name="ityou_esi_theme_styles"
    meta_type="Filesystem Directory View"
    directory="ityou.esi.theme:skins/styles"/>
 <object name="ityou_esi_theme_icons"
    meta_type="Filesystem Directory View"
    directory="ityou.esi.theme:skins/icons"/>

 <skin-path name="ITYOU ESI Theme" based-on="Sunburst Theme">
  <layer name="ityou_esi_theme_images"
     insert-after="custom"/>
  <layer name="ityou_esi_theme_templates"
     insert-after="ityou_esi_theme_images"/>
  <layer name="ityou_esi_theme_styles"
     insert-after="ityou_esi_theme_templates"/>
  <layer name="ityou_esi_theme_icons"
     insert-after="custom"/>
 </skin-path>

</object>
