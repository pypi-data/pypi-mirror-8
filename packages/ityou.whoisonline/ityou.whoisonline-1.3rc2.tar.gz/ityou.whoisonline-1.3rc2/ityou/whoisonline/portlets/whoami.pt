<dl class="portlet portletWhoAmI"
    i18n:domain="ityou.whoisonline"
    tal:define="user view/user_profile | nothing;
                portal_url  context/@@plone_portal_state/portal_url"    
    tal:condition="user">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span tal:attributes="alt user/fullname; title user/fullname" tal:content="user/fullname" >Who am I?</span>
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem clearfix-m" >
        <a href="" tal:attributes="href string:$portal_url/author/${user/id}">
            <img class="img-portrait" tal:attributes="src user/portrait" />
        </a>
        <div class="info-profile clearfix-m">        
           <dl>
               <dd class="my-profile"><i class="icon-user"></i> <a 
               		href="" 
               		tal:attributes="href string:$portal_url/author/${user/id}" 
               		i18n:translate="my_personal_page">Meine Profil</a></dd>
               <dd class="my-folder" tal:condition="user/home"><i class="icon-folder-open"></i> <a 
               		href="" 
               		tal:attributes="href string:$portal_url/Members/${user/id}" 
               		i18n:translate="my_personal_folder">Meine Ordner</a></dd>               
               <dd class="my-console"><i class="icon-desktop"></i> <a 
               		href="" 
               		tal:attributes="href string:$portal_url/@@dashboard" 
               		i18n:translate="my_dashboard">Meine Konsole</a></dd>
           	   <dd class="write-message"><i class="icon-envelope"></i> <a
           	        href=""
           	        tal:attributes="href string:$portal_url/@@messages"
           	        i18n:translate="write_message">Neue Nachricht</a></dd>

               <dd tal:condition="nothing">
                    <span>Mein Status:</span>
                    <input type="text" name="personal-status" id="personal_state" i18n:translate="personal_status" />
               </dd>

           </dl>         
        </div>

        <div class="logout-user">
            <button class="large logout" name="logout" id="logout">
                <i class="icon-off">&nbsp;</i><span i18n:translate="logout">Abmelden</span>
            </button>
        </div>

	</dd>
		
    <dd class="portletFooter">
        <span class="portletBottomLeft"></span>
        <span class="portletBottomRight"></span>
    </dd>
</dl>
