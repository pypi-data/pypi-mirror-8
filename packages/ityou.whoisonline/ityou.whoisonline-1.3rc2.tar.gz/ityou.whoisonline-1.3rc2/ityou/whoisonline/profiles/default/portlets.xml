<?xml version="1.0"?>
<portlets
 	xmlns:i18n="http://namespaces.zope.org/i18n"
 	i18n_domain="ityou.whoisonline"
 	>
    <portlet 
    	title="Who is Online"        
        description="A portlet which shows online users."
        addview="ityou.portlets.whoisonline"
 		i18n:attributes="title; description"        
       />
    <portlet 
    	title="Who am I"     
        description="A portlet which shows own profile."
        addview="ityou.portlets.whoami"     
        i18n:attributes="title; description"           
       />

 	<assignment 
 		name="whoisonline" 
 		category="context" 
 		key="/"
    	manager="plone.rightcolumn" 
    	type="ityou.portlets.whoisonline" 
    	visible="True"
    	insert-after="*">
 	</assignment>      

