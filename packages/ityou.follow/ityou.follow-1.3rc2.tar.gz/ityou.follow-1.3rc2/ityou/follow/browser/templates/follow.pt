<div id="follow-viewlet" class="follow-lnk"
     i18n:domain="ityou.follow" 
     tal:condition="python: view.isAuthenticatedMember() and view.author() and not view.isMe()">

	<a class="follow-link" tal:condition="not: view/isFollowing" id="follow">
	   <span tal:content="view/followText"></span>
        <i class="fa fa-thumb-tack off"/>
	</a>
	<a class="follow-link" tal:condition="view/isFollowing" style="display: none;" id="follow">
	   <span tal:content="view/followText"></span>
        <i class="fa fa-thumb-tack off"/>
   </a>
	
	<a class="follow-link" tal:condition="view/isFollowing" id="unfollow">
	   <span tal:content="view/unfollowText"></span>
    	<i class="fa fa-thumb-tack"/>
	</a>
	<a class="follow-link" tal:condition="not: view/isFollowing" style="display:none;" id="unfollow">
	   <span tal:content="view/unfollowText"></span>
	   <i class="fa  fa-thumb-tack"/>
   </a>
	
	<div id="author_id" tal:content="view/author" style="display:none;"></div>

</div>
