<div id="livesearch-container" i18n:domain="ityou.esi.viewlets">
	<div id="liversearch-btn" class="btn btn-default btn-bookmark pull-left">
		<span class="fa fa-search"></span>
	</div>
	<div class="pull-right ">
	  <div class="">
		<form class="form-inline" role="form"><input 
            type="text" class="form-control" id="livesearch-input" placeholder="Searching..." i18n:attributes="placeholder"></form>
	  </div>
		<ul class="dropdown-menu livesearch-results pull-right">
			<li class="dropdown-header contents" i18n:translate="content">Content</li>
			<li class="divider"></li>
			<li id="advanced-content-search" class="dropdown-header"><a href="@@search" i18n:translate="advanced_content_search">Advanced content search</a></li>
			<li class="divider"></li>
			<li class="dropdown-header users" i18n:translate="users">Users</li>
			<li class="divider"></li>
			<li id="advanced-user-search" class="dropdown-header">
                <a tal:attributes="href string:${context/portal_url}/Members" i18n:translate="advanced_user_search">Advanced user search</a>
            </li>
			<li class="divider"></li>
		</ul>
	</div>

</div>
