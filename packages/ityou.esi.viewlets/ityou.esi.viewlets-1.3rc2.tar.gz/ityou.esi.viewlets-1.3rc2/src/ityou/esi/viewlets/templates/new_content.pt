<div id="new-content-container" i18n:domain="ityou.esi.viewlets">

<!-- raus
	<div id="new-content-btn" class="btn btn-default btn-bookmark pull-left">
			<i class="fa fa-plus"></i>
	</div>
-->	
	<div class="search-buttons pull-left" tal:on-error="nothing"
		 i18n:domain="ityou.esi.viewlets">

		<div id="new-document-box">
			<ul id="folder-switcher">
				<li class="fs-left fs-here fs-active" i18n:translate="this_folder">This folder</li>
				<li class="fs-right fs-home" i18n:translate="home_folder">Private folder</li>
			</ul>
			<ul class="this-folder" tal:condition="not: view/menu_here">
				<li id="no-permission" i18n:translate="no_create_permission">
					You don't have the permission to create content in this folder. Please place the content into another folder (e.g. your home folder).
				</li>
			</ul>
			<div id="new-document-help">
				<div id="this-folder-help" tal:condition="view/menu_here" i18n:translate="this_folder_help">Create content in this folder.</div>
				<div id="home-folder-help" i18n:translate="home_folder_help">Create content in your home folder.</div>
			</div>
			<ul id="newContentActionMenus" class="this-folder"
			    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
			    xmlns:tal="http://xml.zope.org/namespaces/tal"
			    tal:condition="view/menu_here | nothing"
			    tal:define="menuItem view/menu_here"
			    i18n:domain="plone">
			
			    <div id="new-document-box-list">
			
			        <dl class="newActionMenu deactivated" tal:define="submenu menuItem/submenu" >
			          <dd class="newActionMenuContent"
			              tal:condition="not:menuItem/extra/hideChildren | not:submenu | nothing">
			            <ul>
			                <tal:block repeat="subMenuItem submenu">
			                  <li tal:attributes="class subMenuItem/extra/separator">
			                    <a href="#"
			                       tal:condition="python: subMenuItem['action'] and subMenuItem['icon']"
			                       tal:attributes="href subMenuItem/action;
			                                       title subMenuItem/description;
			                                       class subMenuItem/extra/class | nothing;
			                                       id subMenuItem/extra/id | nothing;
			                                       style string:background:url('${subMenuItem/icon}') no-repeat transparent;"
			                       i18n:attributes="title">
			                        <div tal:content="structure subMenuItem/title"
			                              i18n:translate=""
			                              class="subMenuTitle">
			                            Title
			                        </div>
			                    </a>

			                    <a href="#"
			                       tal:condition="python: subMenuItem['action'] and not subMenuItem['icon']"
			                       tal:attributes="href subMenuItem/action;
			                                       title subMenuItem/description;
			                                       class subMenuItem/extra/class | nothing;
			                                       id subMenuItem/extra/id | nothing;"
			                       i18n:attributes="title">

									<div tal:content="structure subMenuItem/title"
			                              i18n:translate=""
			                              class="subMenuTitle">
			                            Title
			                        </div>
			                   </a>
			                    <div tal:condition="not:subMenuItem/action"
			                         tal:attributes="id subMenuItem/extra/id | nothing;
			                                         class subMenuItem/extra/class | nothing"
			                                         >

			                        <img width="96"
			                             height="96"
			                             alt=""
			                             tal:condition="subMenuItem/icon"
			                             tal:attributes="src subMenuItem/icon;
			                                             title subMenuItem/description"
			                             i18n:attributes="alt;"/>
			                        <div tal:content="structure subMenuItem/title"
			                              i18n:translate=""
			                              class="subMenuTitle">
			                            Title
			                        </div>
			                    </div>
			                  </li>
			                </tal:block>
			            </ul>
			          </dd>
			        </dl>
			
			    </div>
			
			</ul>
			
			<ul id="newContentActionMenus" class="home-folder"
			    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
			    xmlns:tal="http://xml.zope.org/namespaces/tal"
			    tal:define="menuItem view/menu_home"
			    i18n:domain="plone">
			
			    <div id="new-document-box-list">
			
			        <dl class="newActionMenu deactivated"
			            tal:define="submenu menuItem/submenu">
			          <dd class="newActionMenuContent"
			              tal:condition="not:menuItem/extra/hideChildren | not:submenu | nothing">
			            <ul>
			                <tal:block repeat="subMenuItem submenu">
			                  <li tal:attributes="class subMenuItem/extra/separator">
			                    <a href="#"
			                       tal:condition="python: subMenuItem['action'] and subMenuItem['icon']"
			                       tal:attributes="href subMenuItem/action;
			                                       title subMenuItem/description;
			                                       id subMenuItem/extra/id | nothing;
			                                       class subMenuItem/extra/class | nothing;
			                                       style string:background:url('${subMenuItem/icon}') no-repeat transparent;"
			                       i18n:attributes="title">
			                        <div tal:content="structure subMenuItem/title"
			                              i18n:translate=""
			                              class="subMenuTitle">
			                            Title
			                        </div>
			                    </a>
			                    <a href="#"
			                       tal:condition="python: subMenuItem['action'] and not subMenuItem['icon']"
			                       tal:attributes="href subMenuItem/action;
			                                       title subMenuItem/description;
			                                       class subMenuItem/extra/class | nothing;
			                                       id subMenuItem/extra/id | nothing;"
			                       i18n:attributes="title">

									<div tal:content="structure subMenuItem/title"
			                              i18n:translate=""
			                              class="subMenuTitle">
			                            Title
			                        </div>
			                   </a>
			                    <div tal:condition="not:subMenuItem/action"
			                         tal:attributes="id subMenuItem/extra/id | nothing;
			                                         class subMenuItem/extra/class | nothing">
			                        <img width="128"
			                             height="128"
			                             alt=""
			                             tal:condition="subMenuItem/icon"
			                             tal:attributes="src subMenuItem/icon;
			                                             title subMenuItem/description"
			                             i18n:attributes="alt;"/>
			                        <div tal:content="structure subMenuItem/title"
			                              i18n:translate=""
			                              class="subMenuTitle">
			                            Title
			                        </div>
			                    </div>
			                  </li>
			                </tal:block>
			            </ul>
			          </dd>
			        </dl>
			
			    </div>
			
			</ul>
		</div>
	</div>
</div>
