<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n">

  <object name="document_actions" meta_type="CMF Action Category">
    <object name="send-download-link" meta_type="CMF Action"
      i18n:domain="ftw.downloadtoken">
     <property name="title" i18n:translate="">Send download link</property>
     <property
      name="url_expr">string:${object/absolute_url}/send-mail-form</property>
      <property name="link_target"></property>
      <property name="icon_expr"></property>
      <property name="available_expr">python:object.Type() == 'File'</property>
      <property name="permissions">
        <element value="View"/>
      </property>
      <property name="visible">True</property>
    </object>

  </object>
</object>