easyblock = "Toolchain"

name = 'gimkl'
version = '1.5.9'

homepage = '(none)'
description = """GNU Compiler Collection (GCC) based compiler toolchain, including
 OpenMPI for MPI support, and Intel MKL (BLAS, (Sca)LAPACK, FFTW)."""

toolchain = {'name': 'dummy', 'version': 'dummy'}

gcc = 'GCC'
gccver = '4.8.3'
suff = '-%s-%s' % (gcc, gccver)
mpi = 'impi'
mpiver = '4.1.3.049'

dependencies = [
    (gcc, gccver),
    (mpi, mpiver, suff),
    ('imkl', '11.1.2.144', suff),
]

moduleclass = 'toolchain'
