<div class="form" i18n:domain="ztfy.skin">
	<form action="."
		  method="post"
		  enctype="multipart/form-data"
		  tal:omit-tag="not:view/actions | nothing"
		  tal:attributes="method view/method | default;
						  action view/action | default;
						  enctype view/enctype | default;">
		<fieldset>
			<legend tal:condition="view/legend | nothing" tal:content="view/legend" i18n:translate="" />
			<tal:if condition="view/rows">
				<tal:var content="structure view/renderTable" />
				<div class="batch"><div class="batchPages" tal:content="structure view/renderBatch" /></div>
				<div class="actions" tal:condition="view/actions | nothing">
					<div class="buttons">
						<input tal:repeat="action view/actions/values"
							   tal:replace="structure action/render" />
					</div>
				</div>
			</tal:if>
			<div tal:condition="not:view/rows">
				<div class="help" tal:content="view/empty_value">This container is empty.</div>
			</div>
		</fieldset>
	</form>
</div>
