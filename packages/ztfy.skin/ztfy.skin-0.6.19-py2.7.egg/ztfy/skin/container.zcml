<configure
	xmlns="http://namespaces.zope.org/zope"
	xmlns:browser="http://namespaces.zope.org/browser"
	xmlns:z3c="http://namespaces.zope.org/z3c"
	i18n_domain="ztfy.skin">

	<!-- Containers views and adapters -->
	<z3c:pagelet
		name="contents.html"
		for="ztfy.base.interfaces.container.IOrderedContainer"
		class=".container.OrderedContainerBaseView"
		layer=".layer.IZTFYBrowserLayer"
		permission="ztfy.ViewManagementScreens" />

	<browser:viewlet
		name="Contents"
		viewURL="@@contents.html"
		for="zope.container.interfaces.IContainer"
		manager="ztfy.skin.viewlets.contents.interfaces.IContentsViewletManager"
		class=".container.ContainerContentsViewMenu"
		permission="ztfy.ViewManagementScreens"
		layer=".layer.IZTFYBackLayer"
		weight="10" />

	<z3c:template
		template="templates/container/container.pt"
		for=".container.BaseContainerBaseView"
		layer=".layer.IZTFYBackLayer" />

	<z3c:template
		template="templates/container/ordered.pt"
		for=".container.OrderedContainerBaseView"
		layer=".layer.IZTFYBackLayer" />

	<adapter
		name="batch"
		factory=".container.ContainerBatchProvider"
		for="zope.interface.Interface
			 .layer.IZTFYBrowserLayer
			 z3c.table.interfaces.ITable" />

	<!-- Containers columns -->
	<adapter
		name="sorter"
		factory=".container.OrderedContainerSorterColumn"
		provides="z3c.table.interfaces.IColumn"
		for="ztfy.base.interfaces.container.IOrderedContainer
			 .layer.IZTFYBackLayer
			 .interfaces.container.IOrderedContainerBaseView" />

	<adapter
		name="id"
		factory=".container.IdColumn"
		provides="z3c.table.interfaces.IColumn"
		for="ztfy.base.interfaces.IBaseContent
			 .layer.IZTFYBackLayer
			 z3c.table.interfaces.ITable" />

	<adapter
		name="title"
		factory=".container.TitleColumn"
		provides="z3c.table.interfaces.IColumn"
		for="ztfy.base.interfaces.IBaseContent
			 .layer.IZTFYBackLayer
			 z3c.table.interfaces.ITable" />

	<adapter
		name="created"
		factory=".container.CreatedColumn"
		provides="z3c.table.interfaces.IColumn"
		for="ztfy.base.interfaces.IBaseContent
			 .layer.IZTFYBackLayer
			 z3c.table.interfaces.ITable" />

	<adapter
		name="modified"
		factory=".container.ModifiedColumn"
		provides="z3c.table.interfaces.IColumn"
		for="ztfy.base.interfaces.IBaseContent
			 .layer.IZTFYBackLayer
			 z3c.table.interfaces.ITable" />

	<adapter
		name="status"
		factory=".container.StatusColumn"
		provides="z3c.table.interfaces.IColumn"
		for="ztfy.base.interfaces.IBaseContent
			 .layer.IZTFYBackLayer
			 z3c.table.interfaces.ITable" />

	<adapter
		name="actions"
		factory=".container.ActionsColumn"
		provides="z3c.table.interfaces.IColumn"
		for="ztfy.base.interfaces.IBaseContent
			 .layer.IZTFYBackLayer
			 z3c.table.interfaces.ITable" />

</configure>
