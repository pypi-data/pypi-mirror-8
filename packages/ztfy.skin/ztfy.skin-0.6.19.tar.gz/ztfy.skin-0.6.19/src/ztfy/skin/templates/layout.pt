<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
	  tal:define="back context/++back++ | nothing;
				  banner back/custom_banner | nothing;
				  banner_img_height python:banner.getImageSize()[1] if banner is not None else 0;
				  logo back/custom_logo | nothing;
				  logo_img_height python:logo.getImageSize()[1] if logo is not None else 0;
				  banner_height python:max(banner_img_height+60,logo_img_height+20,80);
				  banner_margin python:max(banner_img_height,20);
				  column_top python:max(banner_img_height+80,logo_img_height+40,100);"
	  tal:attributes="xml:lang context/i18n:default_lang;
					  lang context/i18n:default_lang" i18n:domain="ztfy.skin">
<head>
	<title tal:content="context/i18n:title | context/title | context/zope:name" />
	<meta tal:replace="structure context/metas:render | nothing" />
	<tal:var replace="fanstatic:ztfy.skin#ztfy_skin" />
	<tal:var replace="structure provider:z3c.formjs.interfaces.IDynamicJavaScript" />
	<link tal:condition="back/custom_css | nothing"
		  rel="stylesheet" type="text/css"
		  tal:attributes="href string:${back/custom_css/@@absolute_url}" />
</head>
<body class="ztfy">
	<div id="banner" tal:attributes="style string:height: ${banner_height}px;;">
		<img alt="" class="banner" tal:condition="banner"
					tal:attributes="src banner/@@absolute_url" />
		<img alt="" class="logo" tal:condition="logo"
					tal:attributes="src logo/@@absolute_url" />
	</div>
	<div id="header" tal:attributes="style string:margin-top: ${banner_margin}px;;"
					 tal:content="structure provider:header.manager"></div>
	<div id="body">
		<div id="left_column" class="border-column" tal:attributes="style string:top: ${column_top}px;;">
			<div class="actions" tal:replace="structure provider:actions.manager">Actions</div>
			<div class="actions" tal:replace="structure provider:actions.custom">Custom</div>
			<div class="actions" tal:replace="structure provider:contents.manager">Contents</div>
			<div class="workflow" tal:replace="structure provider:workflow.manager">Workflow</div>
			<div class="actions" tal:replace="structure provider:actions.manager.zmi">ZMI</div>
		</div>
		<div id="container" data-ztfy-plugin="$.ZTFY.extras.initContainerSize" data-container-sizer="#left_column">
			<div id="right_column" class="border-column" tal:content="structure provider:properties.manager"></div>
			<div id="content" tal:content="structure provider:pagelet">Page content</div>
			<div class="clearer"><!--  --></div>
		</div>
	</div>
	<div id="footer" tal:content="structure provider:footer.manager"></div>
</body>
</html>
