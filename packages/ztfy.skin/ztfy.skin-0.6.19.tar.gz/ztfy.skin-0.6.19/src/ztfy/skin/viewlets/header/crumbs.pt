<div class="crumbs">
	<tal:loop repeat="element view/crumbs">
		<tal:if condition="element/title">
			<span class="light"> :: </span>
			<a tal:omit-tag="not:element/path"
			   tal:attributes="href element/path; class element/class;"
			   tal:content="element/title" />
		</tal:if>
	</tal:loop>
</div>