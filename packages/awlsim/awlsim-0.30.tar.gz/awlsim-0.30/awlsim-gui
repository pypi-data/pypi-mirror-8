from __future__ import division, absolute_import, print_function, unicode_literals
from awlsim.core.compat import *

from awlsim.gui import *

import getopt


def usage():
	printInfo("awlsim-gui version %d.%d" % (VERSION_MAJOR, VERSION_MINOR))
	printInfo("")
	printInfo("%s [OPTIONS] [AWL-source]" % sys.argv[0])
	printInfo("")
	printInfo("Options:")
	printInfo(" -h|--help             Print this help text")

def main():
	opt_awlSource = None

	try:
		(opts, args) = getopt.getopt(sys.argv[1:],
			"hx",
			[ "help", "extended-insns", ])
	except getopt.GetoptError as e:
		printError(str(e))
		usage()
		return 1
	for (o, v) in opts:
		if o in ("-h", "--help"):
			usage()
			return 0
	if args:
		if len(args) == 1:
			opt_awlSource = args[0]
		else:
			usage()
			return 1

	mainwnd = MainWindow.start(initialAwlSource = opt_awlSource)
	return mainwnd.runEventLoop()

if __name__ == "__main__":
	sys.exit(main())
