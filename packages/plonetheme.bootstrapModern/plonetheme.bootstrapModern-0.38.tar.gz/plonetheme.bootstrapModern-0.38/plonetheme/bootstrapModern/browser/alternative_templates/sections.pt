<tal:sections 
    tal:define="portal_tabs view/portal_tabs;"
    tal:condition="portal_tabs"
    i18n:domain="plone">

    <h5 class="hiddenStructure" i18n:translate="heading_sections">Sections</h5>
    
   <!--<a id="trigger-overlay"><img src="++resource++plonetheme.bootstrapModern.css/menu.svg"></a>-->
    <div class="main_menu" id="trigger_btn">
            <span class="menu-item"></span>
            <span class="menu-item"></span>
            <span class="menu-item"></span>
    </div>

    <div class="menu overlay-hugeinc"
        tal:define="selected_tab python:view.selected_portal_tab">
        
        <div class="menu-content">
            <ul>
                <tal:tabs tal:repeat="tab portal_tabs">
                    <li tal:define="tid tab/id"
                        tal:attributes="id string:portaltab-${tid};
                                        class python:selected_tab==tid and 'active' or ''">
                        <a href=""
                            tal:content="tab/name"
                            tal:attributes="href tab/url;
                                            title item/description|nothing">
                            Tab Name
                        </a>
                                    
                    </li>
                </tal:tabs>
            </ul>
        </div>
    </div>
</tal:sections>

