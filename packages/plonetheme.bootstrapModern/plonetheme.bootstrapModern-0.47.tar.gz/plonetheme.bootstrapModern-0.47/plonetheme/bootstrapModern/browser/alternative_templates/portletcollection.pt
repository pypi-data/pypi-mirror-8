<div class="portlet portletCollection"
    i18n:domain="plone"
    tal:define="collection_url view/collection_url;
                plone_view context/@@plone;
                collection_item view/collection;
                toLocalizedTime nocall:plone_view/toLocalizedTime;
                viewActions here/portal_properties/site_properties/typesUseViewActionInListings|python:();
                "
    tal:attributes="class string:portlet portletCollection ${view/css_class}">


    <div class="portletHeader container-fluid" tal:condition="not:view/data/show_dates">
        <a tal:attributes="href collection_url" tal:omit-tag="not:view/data/show_more" ><h1 tal:content="view/data/header">
        </h1></a>
        <h2 tal:content="collection_item/Description"></h2>
    </div>

    <div class="portlet-gap" tal:condition="view/data/show_dates"></div>

    <div class="container-fluid" id="row-items">
        <tal:collection tal:repeat="item view/results">
        <tal:clearfix tal:define="number repeat/item/number">
            <div class="clearfix visible-sm" tal:condition="python:number % 3 == 0"></div>
            <div class="clearfix visible-lg visible-md" tal:condition="python:number % 4 == 0"></div>
        </tal:clearfix>
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12"
            tal:define="oddrow repeat/item/odd;
                        useView python:item.portal_type in viewActions;
                        item_type item/Type;
                        item_obj item/getObject;
                        excluded_from_nav python:item_obj.exclude_from_nav();
                        item_url python:item_type == 'Media Event' and '%s'%item.getURL() or item.getURL();
                        item_person python:item_type == 'Media Person';
                        use_view_action site_properties/typesUseViewActionInListings|python:();
                        itemUrl python:useView and item.getURL() + '/view' or item.getURL();
                        normalizeString nocall:plone_view/normalizeString;
                        item_link python: (item_type == 'Press Kit' and not view.checkPermission(item, 'Add portal content')) and item_url + '/download_zip' or (item_type in use_view_action and item_url+'/view' or item_url);
                        item_has_video python:view.hasVideoTag(item);
                        ">

            <div class="thumbnail">
                  <div class="thumb-wrapper">
                    
                    <!-- IMAGE -->
                    <a class="thumb-image" tal:condition="python: (item.hasMedia or item.portal_type == 'Image') and not excluded_from_nav" href="" tal:attributes="href item_link">
                      <tal:image replace="structure python:view.getLeadMediaTag(item, scale='collection')"></tal:image>
                      
                    </a> 

                    <div class="thumb-image" tal:condition="python: (item.hasMedia or item.portal_type == 'Image') and excluded_from_nav">
                      <tal:image replace="structure python:view.getLeadMediaTag(item, scale='collection')"></tal:image>   
                    </div>  

                    <!-- Buttons if Media Person -->
                    <div class="btn-group person-buttons person-collection" tal:condition="item_person">
                      
                      <a class="btn btn-inverse phone_popover visible-lg visible-md" tal:condition="python: getattr(item.getObject(), 'telephoneNumber', True)" data-toggle="popover" tal:attributes="data-content python:getattr(item.getObject(), 'telephoneNumber')" data-container="body" data-viewport=".phone-popover" data-placement="top"><i class="fa fa-phone"></i></a>

                      <a tal:attributes="href python:'tel:'+getattr(item.getObject(), 'telephoneNumber')" class="btn btn-inverse visible-sm visible-xs" tal:condition="python: getattr(item.getObject(), 'telephoneNumber', True)"><i class="fa fa-phone"></i></a>
                      
                      <a tal:attributes="href python:'https://twitter.com/intent/follow?original_referer=http://www.intk.com&region=follow_link&screen_name='+getattr(item.getObject(), 'twitter')+'&tw_p=followbutton&variant=2.0'" class="btn btn-inverse" tal:condition="python: getattr(item.getObject(), 'twitter', True)"><i class="fa fa-twitter"></i></a>
                      
                      <a tal:attributes="href python:'mailto:'+getattr(item.getObject(), 'email')+'?subject=Contact via INTK website'" class="btn btn-inverse" tal:condition="python: getattr(item.getObject(), 'email', True)"><i class="fa fa-paper-plane"></i></a>
                    </div>  

                    <!-- VIDEO PLAY ICON IF TAG VIDEO -->
                    <a tal:attributes="href item_link" tal:condition="item_has_video">
                      <div class="icon-video">
                      </div>
                    </a>
                    
                  </div>
                  
                  <div class="caption">
                    <h3 tal:condition="not:excluded_from_nav"><a href="#"
                       tal:attributes="href item_link;"
                       tal:content="item/Title"
                       >
                    Title
                    </a>
                  </h3>
                  <h3 tal:condition="excluded_from_nav" tal:content="item/Title">
                    Title
                  </h3>
                    <p>
                      <span tal:condition="python:item.Description != '' " tal:replace="python:view.trimText(item.Description, 200, strip=False)"></span>
                      
                      <tal:bodyfallback condition="python:item.Description == '' and item_type != 'Image' and item_type != 'File' and item_type != 'Folder' and item_type != 'Press Kit'">
                      <span tal:condition="python: getattr(item.getObject(), 'text', False)" tal:replace="python:view.trimText(item.getObject().text, 200, strip=True)"></span>
                      </tal:bodyfallback>
                    </p> 
                  </div>
                </div>
        </div>
        
        </tal:collection>
    </div>

    <div class="portletFooter row-fluid"
            tal:define="showMore view/data/show_more"
            tal:condition="python:showMore">
        <span tal:condition="showMore">
        <a tal:attributes="href collection_url" class="btn btn-inverse btn-large">
           <span class="hiddenStructure"><span tal:replace="view/data/header" /> - </span>
           <span i18n:translate="more_url">MORE</span>
        </a>
        </span>
    </div>

</div>
