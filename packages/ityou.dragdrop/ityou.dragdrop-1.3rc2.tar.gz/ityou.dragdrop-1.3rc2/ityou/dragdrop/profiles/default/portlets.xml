<?xml version="1.0"?>
<portlets
 	xmlns:i18n="http://namespaces.zope.org/i18n"
 	i18n_domain="ityou.dragdrop"
 	>
    <portlet 
       addview="ityou.dragdrop.portlets.dragdrop"
       title="Drag and Drop Portlet"
       description="A portlet where you can copy or move documents by copy and paste."
       i18n:attributes="title; description"
       />
 	<assignment 
 		name="DragAndDrop" 
 		category="context" 
 		key="/"
    	manager="plone.rightcolumn" 
    	type="ityou.dragdrop.portlets.dragdrop" 
    	visible="True"
    	insert-before="*">
 	</assignment>
 	 
</portlets>

