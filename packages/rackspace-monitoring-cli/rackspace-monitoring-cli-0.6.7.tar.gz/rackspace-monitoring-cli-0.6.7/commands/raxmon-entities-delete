from raxmon_cli.common import run_action

OPTIONS = [
    [['--id'], {'dest': 'id', 'help': 'Entity ID'}]
]

REQUIRED_OPTIONS = ['id']

def callback(driver, options, args, callback):
    en = driver.get_entity(entity_id=options.id)
    status = driver.delete_entity(entity=en,
                                  who=options.who,
                                  why=options.why)

    callback(status)

run_action(OPTIONS, REQUIRED_OPTIONS, 'entities', 'delete', callback)
