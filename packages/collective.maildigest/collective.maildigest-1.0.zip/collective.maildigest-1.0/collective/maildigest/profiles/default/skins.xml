<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False">

 <object name="maildigest_images"
    meta_type="Filesystem Directory View"
    directory="collective.maildigest:skins/maildigest_images"/>

 <object name="maildigest_styles"
    meta_type="Filesystem Directory View"
    directory="collective.maildigest:skins/maildigest_styles"/>

 <skin-path name="*">
  <layer name="maildigest_images" insert-after="custom"/>
 </skin-path>

 <skin-path name="*">
  <layer name="maildigest_styles" insert-after="custom"/>
 </skin-path>

</object>
