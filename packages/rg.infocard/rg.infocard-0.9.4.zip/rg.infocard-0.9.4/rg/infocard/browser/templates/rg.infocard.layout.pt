<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">
  <body>
    <metal:block metal:fill-slot="top_slot"
                 tal:define="foo python:request.set('disable_plone.leftcolumn', 1);
                             foo python:request.set('disable_plone.rightcolumn', 1);
                            ">
    </metal:block>
    <metal:block metal:fill-slot="style_slot">
      <link rel='stylesheet' tal:attributes="href string:${portal_url}/++resource++rg.infocard/css/rg.infocard.edit.css">
    </metal:block>
    <metal:block metal:fill-slot="javascript_head_slot">
      <script tal:attributes="src string:${portal_url}/++resource++rg.infocard/scripts/rg.infocard.edit.js"></script>
    </metal:block>
    <metal:main fill-slot="main">
        <metal:main-macro define-macro="main">
            <h1 class="documentFirstHeading" tal:content="view/label">Title</h1>
            <div id="content-core" tal:content="structure view/contents" />
        </metal:main-macro>
    </metal:main>

  </body>
</html>
