<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      i18n:domain="ityou.astream">
<body>
<metal:macro define-macro="astream-macro">       

    <!-- astream ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

<div id="astream-header-box">
    <metal:slot define-slot="title">
        <div class="headline">
            <div class="col-xs-12">
                <h1 class="documentFirstHeading breadcrumb" 
                    i18n:translate="lastest_activities">The latest activities</h1>
            </div>
        </div>
    </metal:slot>
    <div class="activity-controls clearfix">
	    <div class="col-xs-12 col-sm-6 text-left">
		    <button type="button" class="btn btn-default show-all hidden" i18n:translate="activity_all">view all</button>
	    </div>
	    <div class="col-xs-12 col-sm-6 text-right">
		    <button type="button" class="btn btn-default hide-all" i18n:translate="activity_hide_all">hide all</button>
	    </div>
    </div>

    <div class="visualClear"></div>
    <tal:cond tal:condition="python: hasattr(view, 'FollowInstalled')">
		<div id="astream-tabs" tal:condition="python: view.FollowInstalled() and request.get('action', '') != 'userprofile'">
		    <!--<ul>
				<li class="astream-tab-all selected"><div i18n:translate="all_activities">All</div></li>
				<li class="astream-tab-following"><div i18n:translate="following_activities">Following</div></li>
			</ul>-->
			<ul class="nav nav-tabs">
			    <li class="active"><a href="#" class="astream-tab-all" i18n:translate="all_activities">All</a></li>
			    <li><a href="#" class="astream-tab-following" i18n:translate="following_activities">Subscribed</a></li>
			</ul>
		</div>
	</tal:cond>
</div>


	<div class="visualClear"></div>

    <div id="activity-stream" class="clearfix">
    
    <div class="clearfix">
        <div class="col-xs-12">
            <ul id="activity-stream-list" class="list-unstyled overthrow"></ul>
        </div>
    
        <div class="col-xs-12 get-more-activities">&nbsp;</div>
    </div>
	    
    </div>
    <!-- /astream ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

    <div class="ajax-params invisible">
        <div id="ASTREAM_DELAY" tal:content="view/ASTREAM_DELAY | python:10000"></div>
    </div>

</metal:macro>
</body>
</html>
