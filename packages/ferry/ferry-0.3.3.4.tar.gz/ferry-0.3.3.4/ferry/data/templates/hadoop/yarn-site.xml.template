<configuration>

  <property>
    <name>yarn.log-aggregation-enable</name>
    <value>true</value>
  </property>

  <property>
    <name>yarn.nodemanager.remote-app-log-dir</name>
    <value>/service/data/logs/yarn/apps</value>
  </property>

  <property>
    <name>yarn.nodemanager.resource.cpu-vcores</name>
    <value>$CORES</value>
    <description>number of cores to use</description>
  </property>


  <property>
    <name>yarn.nodemanager.resource.memory-mb</name>
    <value>$MEM</value>
    <description>total available memory</description>
  </property>

  <property>
    <name>yarn.scheduler.maximum-allocation-mb</name>
    <value>$MEM</value>
    <description>max that yarn can use</description>
  </property>

  <property>
    <name>yarn.scheduler.minimum-allocation-mb</name>
    <value>$CMEM</value>
    <description>memory per container</description>
  </property>

  <property>
    <name>yarn.app.mapreduce.am.resource.mb</name>
    <value>$RMEM</value>
    <description>set to 2x mem-per-container</description>
  </property>

  <property>
    <name>yarn.app.mapreduce.am.command-opts</name>
    <value>$ROPTS</value>
    <description>set to 0.8x to above option</description>
  </property>

  <property>
    <name>yarn.app.mapreduce.am.staging-dir</name>
    <value>$DATA_STAGING</value>
  </property>

  <property>
    <name>yarn.nodemanager.aux-services</name>
    <value>mapreduce_shuffle</value>
  </property>

  <property>
    <description>The hostname of the RM.</description>
    <name>yarn.resourcemanager.hostname</name>
    <value>$YARN_MASTER</value>
  </property>    

  <property>
    <description>The http address of the RM web application.</description>
    <name>yarn.resourcemanager.webapp.address</name>
    <value>$YARN_MASTER:8088</value>
  </property>

  <property>
    <description>The https adddress of the RM web application.</description>
    <name>yarn.resourcemanager.webapp.https.address</name>
    <value>$YARN_MASTER:8090</value>
  </property>

  <property>
    <description>The address of the RM admin interface.</description>
    <name>yarn.resourcemanager.admin.address</name>
    <value>$YARN_MASTER:8033</value>
  </property>

  <property>
    <name>yarn.nodemanager.aux-services.mapreduce.shuffle.class</name>
    <value>org.apache.hadoop.mapred.ShuffleHandler</value>
  </property>

  <property>
    <name>yarn.resourcemanager.resource-tracker.address</name>
    <value>$YARN_MASTER:8025</value>
  </property>
  <property>
    <name>yarn.resourcemanager.scheduler.address</name>
    <value>$YARN_MASTER:8030</value>
  </property>
  <property>
    <name>yarn.resourcemanager.address</name>
    <value>$YARN_MASTER:8041</value>
  </property>
  <property>
    <name>yarn.nodemanager.vmem-check-enabled</name>
    <value>false</value>
    <description>Prevent YARN from killing containers that use too much VMEM </description>
  </property>

</configuration>
