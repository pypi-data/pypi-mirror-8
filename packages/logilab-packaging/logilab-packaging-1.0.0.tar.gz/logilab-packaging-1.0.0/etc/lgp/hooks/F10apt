#!/bin/sh

cat > /etc/apt/apt.conf.d/99lgp <<EOF
APT {
  Get {
    Assume-Yes "true";
    Fix-Broken "true";
    Force-Yes "true";
  };
  Clean "always";
  AllowUnauthenticated "true";
  ReInstall "true";
};

// Pre-configure all packages before
// they are installed.
DPkg::Pre-Install-Pkgs {
  "dpkg-preconfigure --apt --priority=low";
};
EOF
