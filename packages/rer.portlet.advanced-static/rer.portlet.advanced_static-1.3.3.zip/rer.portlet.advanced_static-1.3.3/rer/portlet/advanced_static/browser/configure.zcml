<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:i18n="http://namespaces.zope.org/i18n"
    xmlns:browser="http://namespaces.zope.org/browser"
    i18n_domain="rer.portlet.advanced_static">

  <adapter factory=".configlet.RERAdvancedStaticPortletControlPanelAdapter" />

  <browser:page
      name="advancedstaticportlet-controlpanel"
      for="Products.CMFPlone.interfaces.IPloneSiteRoot"
      class=".configlet.RERAdvancedStaticPortletControlPanel"
      permission="cmf.ManagePortal"
      />
    <!-- Register the view for image widget -->
    <browser:page
         for="rer.portlet.advanced_static.rerportletadvancedstatic.Assignment"
         name="image"
         class=".imageview.ImageView"
         permission="zope.Public"
      />

  <!-- Resource for stylesheet -->
  <browser:resource
      name="advanced_static.css"
      file="advanced_static.css"
      />

</configure>

