{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Enable eggs for indexing",
    "description": "Enable multiple uploaded eggs for indexing",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "eggs": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "python_tag": {
                        "description": "The PEP425 python tag of the egg",
                        "type": "string"
                    },
                    "name": {
                        "description": "The name of the egg",
                        "type": "string"
                    },
                    "version": {
                        "description": "The version of the egg in the form 'upstream-build'",
                        "type": "string"
                    }
                },
                "required": ["python_tag", "name", "version"]
            },
            "minItems": 1,
            "uniqueItems": true
        }
    },
    "required": ["eggs"]
}
