{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Create User",
    "description": "User metadata",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "email": {
            "description": "The email address of the user.",
            "type": "string"
        },
        "teams": {
            "description": "The teams that this user will be a member of.",
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 0,
            "uniqueItems": true
        }
    },
    "required": ["email"]
}
