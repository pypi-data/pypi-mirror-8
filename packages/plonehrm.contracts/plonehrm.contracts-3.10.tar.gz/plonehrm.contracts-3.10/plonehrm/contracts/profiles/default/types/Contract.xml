<?xml version="1.0"?>
<object name="Contract"
   meta_type="Factory-based Type Information with dynamic views"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 <property name="title">Contract</property>
 <property name="description">
      </property>
 <property name="content_icon">document_icon.gif</property>
 <property name="content_meta_type">Contract</property>
 <property name="product">plonehrm.contracts</property>
 <property name="factory">addContract</property>
 <property name="immediate_view">contract_view</property>
 <property name="global_allow">False</property>
 <property name="filter_content_types">False</property>
 <property name="allowed_content_types"/>
 <property name="allow_discussion">False</property>
 <property name="default_view">contract_view</property>
 <property name="view_methods">
  <element value="contract_view"/>
 </property>
 <property name="default_view_fallback">False</property>
 <alias from="(Default)" to="contract_redirect"/>
 <alias from="view" to="contract_view"/>
 <alias from="edit" to="atct_edit"/>
 <action title="View" action_id="view" category="object" condition_expr=""
    url_expr="string:${object_url}" visible="True">
  <permission value="View"/>
 </action>
 <action title="External Edit" action_id="external_edit" category="object"
    condition_expr="object/externalEditorEnabled"
    url_expr="string:${object_url}/external_edit" visible="False">
  <permission value="plonehrm: Modify contract"/>
 </action>
 <!-- Edit must be defined, but invisible.  When a validation error
      occurs, we can then still get to the edit form. -->
 <action title="Edit" action_id="edit" category="object" condition_expr=""
    url_expr="string:${object_url}/edit" visible="False">
  <permission value="plonehrm: Modify contract"/>
 </action>
</object>
