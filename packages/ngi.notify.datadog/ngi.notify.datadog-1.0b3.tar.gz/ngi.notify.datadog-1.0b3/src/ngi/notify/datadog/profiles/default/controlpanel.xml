<?xml version="1.0"?>
<object
        name="portal_controlpanel"
        xmlns:i18n="http://xml.zope.org/namespaces/i18n"
        i18n:domain="ngi.notify.datadog"
        purge="False">

    <configlet
            title="Datadog"
            action_id="Datadog_settings"
            appId="ngi.notify.datadog"
            category="Products"
            condition_expr=""
            url_expr="string:${portal_url}/@@Datadog-settings"
            icon_expr="string:${portal_url}/++theme++ngi.notify.datadog/icon.gif"
            visible="True"
            i18n:attributes="title">
        <permission>Manage portal</permission>
    </configlet>

</object>
