<div class="file-widget" i18n:domain="ztfy.file">
	<tal:if define="value view/current_value | nothing" condition="value">
		<span i18n:translate="">Current content:</span> <span tal:content="value/contentType" /> &nbsp;&ndash;&nbsp;
		<span tal:content="python:value.getSize() / 1024" /> <span i18n:translate="">Kb</span>
		<span class="download-link" tal:condition="view/downloadable"><a target="_blank" tal:attributes="href value/@@absolute_url" i18n:translate="">Download</a></span>
	</tal:if>
	<tal:if condition="not:view/value">
		[[ <span i18n:translate="">No data</span> ]]
	</tal:if>
</div>