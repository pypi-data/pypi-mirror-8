<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="ityou.thumbnails">
<body>

    <div metal:fill-slot="main" id="thumbnail-view">
    <metal:main-macro define-macro="main"
                      tal:define="kssClassesView context/@@kss_field_decorator_view;
                                  getKssClasses nocall:kssClassesView/getKssClassesInlineEditable;
                                  templateId template/getId;
                                  is_mobile python:False;
                                  ">
        
        <div id="ESI_ROOT" class="hiddenStructure" tal:content="view/ESI_ROOT | nothing"></div>

        <div tal:replace="structure provider:plone.abovecontenttitle" />
        <h1 metal:use-macro="here/kss_generic_macros/macros/generic_title_view" />
		
        <div tal:replace="structure provider:plone.belowcontenttitle" />
        
		<p class="documentDescription clearfix">
            <span tal:replace="context/Description" />
        </p>

        <div class="tumbnail-controls clearfix">
            <span class="thumbnail-listing-sort pull-left">
                <!-- <em i18n:translate="thumb_list_sorting">Sorting: </em>
                <a href="javascript:void(0);" title="Date" id="thumbnail-listing-sort-creation-date" data-sortby="creation_date" i18n:translate="thumb_list_creation_date">Creation Date</a>
                &bull;
                <a href="javascript:void(0);" title="Date" id="thumbnail-listing-sort-modification-date" data-sortby="modification_date" i18n:translate="thumb_list_modification_date">Modification Date</a>
                &bull;
                <a href="javascript:void(0);" title="Title" id="thumbnail-listing-sort-name" data-sortby="title" i18n:translate="thumb_list_title">Title</a>
                -->
                <div class="btn-group">
                    <button type="button" class="btn btn-default" i18n:translate="thumb_list_sorting" id="thumbnail-listing-sort-method">Sorting</button>
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                        <span class="caret"></span>
                        <span class="sr-only">Toggle Dropdown</span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a href="#" id="thumbnail-listing-sort-creation-date" data-sortby="creation_date" i18n:translate="thumb_list_creation_date">Creation Date</a></li>
                        <li><a href="#" id="thumbnail-listing-sort-modification-date" data-sortby="modification_date" i18n:translate="thumb_list_modification_date">Modification Date</a></li>
                        <li><a href="#" id="thumbnail-listing-sort-name" data-sortby="title" i18n:translate="thumb_list_title">Title</a></li>
                    </ul>
                </div>
            </span>
            
            <span class="thumbnail-listing-size">
                <div class="btn-group">
                    <button type="button" class="btn btn-default" id="thumbail-list-view"><i class="fa fa-align-justify"></i></button>
                    <button type="button" class="btn btn-default" id="thumbnail-1-column-view"><i class="fa fa-stop"></i></button>
                    <button type="button" class="btn btn-default" id="thumbnail-2-columns-view"><i class="fa fa-th-large"></i></button>
                    <button type="button" class="btn btn-default" id="thumbnail-3-columns-view"><i class="fa fa-th"></i></button>
                    <button type="button" class="btn btn-default" id="thumbnail-standard-view"><i class="fa fa-undo"></i></button>
                </div>
            </span>
        </div>

        <div tal:replace="structure provider:plone.abovecontentbody" />

        <div metal:define-macro="text-field-view"
             id="parent-fieldname-text" class="plain"
             tal:define="kss_class python:getKssClasses('text',
                         templateId=templateId, macro='text-field-view');
                         text here/aq_explicit/getText|nothing"
             tal:condition="text" >
            <div metal:define-slot="inside" tal:replace="structure text">The body</div>
        </div>


        <div class="container-off">        
        
        <form class="kssattr-serveraction-foldercontents_update_table row" 
            action="" 
            method="post"
            name="folderContentsForm"
			tal:define="fc view/getFolderContents"
			tal:attributes="action context/absolute_url">
            	
            	
    	    <div tal:attributes="class string:folder-item ${item/type} ${item/id} col-xs-6 col-md-4 col-lg-2; id item/uid" tal:repeat="item fc/folder_items">
    	        <div class="thumbnail">
    	            <a tal:condition="python: item['type'] != 'Folder'" tal:attributes="href string:${item/url}/@@show_preview; title string:${item/title}" class="linked-document thumbnail-holder">
        	            <img tal:attributes="class string:img-responsive ${item/type}" src="++resource++ityou.thumbnails.images/no-thumbnail.png">
	                </a>
	                
	                <a tal:condition="python: item['type'] == 'Folder'" tal:attributes="href string:${item/url}" class="thumbnail-holder">
	                    <img tal:attributes="class string:img-responsive ${item/type}" src="++resource++ityou.thumbnails.images/no-thumbnail.png">
	                </a>
	                
	                <div class="caption">
	                    <a tal:condition="python: item['type'] != 'Folder'" tal:attributes="href string:${item/url}; title string:${item/title}" class="document-download">
	                        <div tal:condition="item/icon | nothing" tal:attributes="class string: ${item/contenttype_class} item-title">
					            <img tal:attributes="src item/icon; alt string:${item/title}"><span tal:content="item/title"/>
				            </div>
				            <div tal:condition="not: item/icon | nothing" tal:attributes="class string: ${item/contenttype_class} item-title" tal:content="item/title"/>
	                    </a>
	                    
	                    <a tal:condition="python: item['type'] == 'Folder'" tal:attributes="href string:${item/url}; title string:${item/title}">
	                        <div tal:attributes="class string: item-title" tal:content="item/title"/>
	                    </a>
	                </div>
    	        
        	        <div class="toolbar" tal:condition="view/DRAGDROP_INSTALLED">
        	            <div class="holder">
	                        <input type="checkbox">
    	                    <i class="fa fa-trash-o delete"></i>
	                    </div>
        	        </div>
        	        
        	        <div class="additional-information-trigger">
        	            <div class="inner">
        	                <i class="fa fa-plus-circle"></i>
        	            </div>
        	        </div>
        	        
        	        <div class="additional-information">
        	            <div class="holder">
            	            <i class="fa fa-user"></i> <span class="author" tal:content="item/author"/><br>
            	            <i class="fa fa-pencil"></i> <span class="date_created" tal:attributes="data-unix string:${item/timestamp_create}" tal:content="item/created"/><br>
            	            <i class="fa fa-edit"></i> <span class="date_edited" tal:attributes="data-unix string:${item/timestamp_mod}" tal:content="item/edited"/>
        	            </div>
        	        </div>
        	        
    	        </div>
    	    </div>
            
			<div class="col-xs-6 col-md-4 col-lg-2 more-item">
			    <div class="thumbnail">
			        <a class="show-more-linked">
			            <img class="img-responsive" tal:attributes="src string:++resource++ityou.thumbnails.images/down.png">
			        </a>
			    </div>
			</div>
<!--
            <div class="buttons">
			    <div tal:repeat="action fc/folder_actions" class="button">
				   <input tal:condition="action/allowed | nothing"
						tal:attributes="value action/title;
						name string:${action/id}:method" class="context" type="submit">
			    </div>
            </div>
			
			<input tal:replace="structure context/@@authenticator/authenticator" />
-->
        </form>
		
        <div tal:replace="structure provider:plone.belowcontentbody" />

    </metal:main-macro>
    </div>

</body>
</html>

